<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="@color/colorPrimary" android:id="@+id/diasItem">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.01" android:id="@+id/LinealDias">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textViewDia" android:layout_weight="1"
                android:textSize="24sp" android:textStyle="bold" tools:text="Lunes" android:paddingLeft="8dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textViewTemMin" android:layout_weight="1"
                android:textSize="24sp" android:textStyle="bold" tools:text="Min. 24 Cº" android:gravity="left"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textViewTempMax" android:layout_weight="1"
                android:textSize="24sp" android:textStyle="bold" android:gravity="center" tools:text="Max. 24 Cº"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>